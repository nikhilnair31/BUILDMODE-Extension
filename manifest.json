{
    "manifest_version": 3,
    "name": "FORGOR",
    "version": "1.0.0",
    "description": "Save screenshots and images from any site to your FORGOR account, then view and manage them in a side panel.",
    "action": {
        "default_title": "FORGOR"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "activeTab",
        "sidePanel"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "images/icon16_1.png",
        "32": "images/icon32_1.png",
        "128": "images/icon128_1.png"
    }
}

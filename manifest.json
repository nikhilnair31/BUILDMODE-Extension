{
    "manifest_version": 3,
    "name": "FORGOR",
    "version": "0.1.0",
    "description": "Shows related images based on your current tab's title and domain.",
    "action": {
        "default_title": "FORGOR"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "images/icon16_1.png",
        "32": "images/icon32_1.png",
        "128": "images/icon128_1.png"
    }
}
